<% content_for :title, "Editing event" %>

<h1>Editing event</h1>

<%= render "form", event: @event %>

<br>

<div>
  <% if policy(@event).show? %>
    <%= link_to "Show this event", @event %>
  <% end %>

  <% if policy(Event).index? %>
    <%= link_to "Back to events", events_path %>
  <% end %>
</div>
